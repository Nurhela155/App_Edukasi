<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Layer (Outside Shadow) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30BC9C2E" />
            <stroke android:width="3dp" android:color="#4FBC9C2E" />
            <padding android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp" />
        </shape>
    </item>
    <!-- Inner Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30BC9C2E" />
            <stroke android:width="2dp" android:color="#4FBC9C2E" />
            <padding android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp" />
        </shape>
    </item>

</layer-list>
