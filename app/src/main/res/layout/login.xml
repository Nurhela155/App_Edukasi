<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/judul"
        android:textSize="60dp"
        android:shadowColor="#83822C"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:padding="8dp"
        android:layerType="software"
        app:strokeWidth="3dp"
        app:strokeColor="@color/pinggiran"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />


    <!-- Username Section -->

        <!-- Password Section -->


    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="282dp"
            android:layout_height="26dp"
            android:fontFamily="@font/fredokaone_regular"
            android:paddingBottom="8dp"
            android:text="Username"
            android:textColor="@color/form"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:background="@drawable/input_login_register"
            android:gravity="center_vertical"
            android:hint="Enter your username"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/form"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="90dp"
        android:layout_marginTop="308dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="285dp"
            android:layout_height="26dp"
            android:fontFamily="@font/fredokaone_regular"
            android:paddingBottom="8dp"
            android:text="Password"
            android:textColor="@color/form"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:background="@drawable/input_login_register"
            android:gravity="center_vertical"
            android:hint="Enter your password"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/form"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/Button_login"
        style="@style/ButtonStyle.SafariAdventure"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginBottom="244dp"
        android:background="@drawable/warna_button"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFE082"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </Button>
    <ImageButton
        android:id="@+id/imageButtonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="Navigate to Login or Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/elemen_login2" />


</androidx.constraintlayout.widget.ConstraintLayout>







